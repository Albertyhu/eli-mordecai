---
const {
    type,
    description, 
    icon, 
} = Astro.props; 
const url = `/practice-areas/${type.toLowerCase().replace(/\s+/g, '-')}`
---
<div role="listitem" class="practice-area-collection w-dyn-item w-col w-col-4 h-full">
    <div class="practice-area-item h-auto">
        <div class="practice-listing-content-wrap !pb-[40px]">
            <div
                class = "h-[110px]"
            >
                <a href={url} class="practice-area-title">{type}</a>
            </div>
            <p class = "h-[250px] max-h-[250px]">{description}</p>
        </div>
        <div class="grid [&>div]:mx-auto mb-0 mt-auto text-center sm:flex sm:flex-row sm:align-start">
            <div class="mx-auto w-[53px] min-[788px]:w-[53px] sm:mt-[20px]">
                <img 
                alt={type}
                decoding="async"
                loading="lazy" 
                src={icon.src}
                class = "w-[53px] h-[53px]"
                />
            </div>
            <div class="">
                <a href={url} class="practice-button w-button">View More</a>
            </div>
        </div>
    </div>
</div>
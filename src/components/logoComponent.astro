---
import Logo from "@/assets/logo/Eli_Mordecai-Logo.webp";
const { 
 customDiv,
 customImg,
 immediateLoading = false, 
 } = Astro.props; 
 const imgStyle = "w-[225px] aspect-[5/2] min-[500px]:w-[300px]"
---
{immediateLoading ? 
<div class={`${customDiv ? customDiv : "header-logo"}`}>
    <a 
        href="/" 
        aria-current="page" 
        class={`${customImg ? customImg : "w-inline-block w--current"}`}>
        <img 
        src={Logo.src} 
        loading="eager" 
        class = "w-[225px] aspect-[5/2] min-[500px]:w-[300px]"
        alt="Attorney Brand Logo"/>
    </a>
</div>
:
<div class={`${customDiv ? customDiv : "header-logo"}`}>
    <a 
        href="/" 
        aria-current="page" 
        class={`${customImg ? customImg : "w-inline-block w--current"}`}>
        <img 
        src={Logo.src} 
        loading="lazy" 
        class = "w-[225px] aspect-[5/2] min-[500px]:w-[300px]"
        alt="Attorney Brand Logo"/>
    </a>
</div>
}

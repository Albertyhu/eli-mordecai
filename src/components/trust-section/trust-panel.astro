---
const {
    label,
    description, 
    icon,
    index 
} = Astro.props; 
---
<div role="listitem" class="fadeOutIntoBottom fadeInFromBottomTag z-[2]">
    <div class={`bg-secondaryC min-h-[420px] mb-[30px] px-[20px] pt-[20px] pb-[30px] max-[767px]:min-h-auto max-[767px]:mb-[30px] max-[767px]:px-[30px] !min-h-0 md:flex ${index%2 === 0 ? "md:flex-row" : "md:flex-row-reverse"} md:flex-nowrap`}>
        <div
            class = "min-w-[150px] w-[150px] h-[150px] m-auto rounded-full border-solid border-2 border-primaryC flex justify-center items-center"
        >
            <img 
                alt={`${label} icon`}
                decoding="async"
                loading="lazy" 
                src={icon.src}
                class = "object-fit m-auto"
                width = "100"
                height = "100"
            />
        </div>
        <div
            class="justify-center items-center px-5"
        >
            <h3
                class = "text-primaryC text-2xl mt-5 md:my-auto font-bold"
            >{label}</h3>
            <p class = "w-auto">{description}</p>
        </div>
    </div>
</div>
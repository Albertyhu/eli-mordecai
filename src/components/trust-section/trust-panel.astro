---
const {
    label,
    description, 
    icon,
    index 
} = Astro.props; 
---
<div role="listitem" class="fadeOutIntoBottom fadeInFromBottomTag">
    <div class={`practice-area-item !min-h-0 md:flex ${index%2 === 0 ? "md:flex-row" : "md:flex-row-reverse"} md:flex-nowrap`}>
        <div
            class = "min-w-[150px] w-[150px] h-[150px] m-auto rounded-full border-solid border-2 border-primaryC flex justify-center items-center"
        >
            <img 
                alt={`${label} icon`}
                decoding="async"
                loading="lazy" 
                src={icon.src}
                class = "w-[100px] h-[100px] object-fit m-auto"
            />
        </div>
        <div
            class="justify-center items-center px-5"
        >
            <h3
                class = "text-primaryC text-2xl mt-5 md:my-auto font-bold"
            >{label}</h3>
            <p class = "w-auto">{description}</p>
        </div>
    </div>
</div>
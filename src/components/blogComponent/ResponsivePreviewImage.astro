---
const { 
    defaultImg, 
    phoneImg, 
    mediumTabImg, 
    tabletImg, 
    altText, 
} = Astro.props; 
---
<img
    src={typeof defaultImg === "string" ? defaultImg : defaultImg.src}
    loading="lazy"
    alt={altText}
    sizes="(max-width: 479px) 83vw, (max-width: 767px) 87vw, (max-width: 991px) 29vw, (max-width: 1279px) 30vw, (max-width: 1439px) 31vw, (max-width: 1919px) 440px, 453.328125px"
    srcset={`
        ${phoneImg ? phoneImg + " 500w," : ""}
        ${mediumTabImg ? mediumTabImg + " 800w," : ""}
        ${tabletImg ? tabletImg + "1080w," : ""}
        ${defaultImg} 1200w
    `}
/>
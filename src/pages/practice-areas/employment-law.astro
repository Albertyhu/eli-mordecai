---
import PracticeAreaLayout from "@/layout/PracticeAreaLayout.astro";
import ListComponent from "@/components/listComponent.astro";
import ResponsiveImage from "@/components/graphics/ResponsiveImage.astro";
const scenarios = [
{
  "label": "Discrimination",
  "description": "If an employee believes they have been discriminated against based on protected characteristics such as race, gender, age, disability, religion, or sexual orientation, it may be a legal case. Discrimination can manifest in hiring, promotions, job assignments, or termination decisions."
},
{
  "label": "Harassment",
  "description": "Workplace harassment, including sexual harassment, creates a hostile work environment and violates employees' rights. Employees experiencing harassment should document incidents and seek legal advice to determine if legal action is necessary."
},
{
  "label": "Wrongful Termination",
  "description": "If an employee is fired unlawfully, such as for discriminatory reasons, whistleblowing, or exercising legal rights (such as taking medical leave), it can be a legal case for wrongful termination."
},
{
  "label": "Wage and Hour Violations",
  "description": "Employers must comply with wage and hour laws regarding minimum wage, overtime pay, meal breaks, and rest periods. Employees who are not paid fairly or denied proper breaks may have a legal case for wage and hour violations."
},
{
  "label": "Retaliation",
  "description": "Employers cannot retaliate against employees for reporting illegal activities, participating in investigations, or exercising their legal rights. Retaliation cases can arise if an employee faces adverse actions after engaging in protected activities."
},
{
  "label": "Breach of Contract",
  "description": "Disputes over employment contracts, non-compete agreements, severance packages, or other contractual terms can lead to legal cases if one party breaches the contract terms."
},
{
  "label": "Family and Medical Leave Act (FMLA) Violations",
  "description": "Employers must provide eligible employees with leave under FMLA for qualified medical or family reasons. Violations of FMLA rights can result in legal action."
},
{
  "label": "Unsafe Working Conditions",
  "description": "If an employer fails to provide a safe work environment, leading to injuries or health hazards for employees, it may be a legal case under occupational safety and health laws."
},
{
  "label": "Employee Benefits Disputes",
  "description": "Issues related to health insurance, retirement plans, stock options, or other employee benefits can lead to legal cases if employees' rights are violated."
},
{
  "label": "Whistleblower Protections",
  "description": "Employees who report illegal activities, fraud, or safety violations within the company are protected by whistleblower laws. Any retaliation against whistleblowers can result in legal action."
}
]

const expertise = [
  {
    "label": "Wrongful Terminaction", 
    "description": "If you've been unjustly fired, I will evaluate your case and fight for your rights. My goal is to secure the compensation and justice you deserve.", 
  },
  {
    "label": "Description", 
    "description": "Facing discrimination at work can be devastating. Whether it's based on race, gender, age, disability, or any other protected characteristic, I am here to stand up for you.", 
  },
    {
    "label": "Harassment", 
    "description": "A hostile work environment is unacceptable. I take harassment cases seriously and work diligently to hold perpetrators accountable and create a safer workplace for all.", 
  },
    {
    "label": "Wage and Hour Disputes", 
    "description": "Ensuring fair compensation is a fundamental right. I handle cases involving unpaid wages, overtime disputes, and other wage-related issues to ensure you receive what you are owed.", 
  },
    {
    "label": "Retailiation", 
    "description": "Retaliation for reporting misconduct or asserting your rights is illegal. I protect employees who have been punished for doing the right thing, ensuring they receive justice and protection.", 
  },
]

const reasons = [
{
  "label": "Personal Attention",
  "description": "Every client receives individualized care and attention. I listen to your story and build a strategy that best fits your situation."
},
{
  "label": "Expert Knowledge",
  "description": "My deep understanding of employment law allows me to navigate complex legal landscapes effectively."
},
{
  "label": "Aggressive Representation",
  "description": "I am dedicated to fighting for your rights with tenacity and skill."
},
{
  "label": "Proven Results",
  "description": "My track record of successful outcomes speaks for itself. I am committed to achieving the best possible results for my clients."
}
]

---
<PracticeAreaLayout
  keyword = "Employment Attorney in Los Angeles" 
  title = "Employment Law Services"
  customDescription = "If you are facing discrimination, harassment, or wage issues at a workplace, it is essential to see the expertise of an employment attorney in Los Angeles."
  CTAHeader = "Take the first step towards resolving your employment issues."
  CTAleftContent = "Don't go at it alone and get professional legal consultation. Let's discuss. "
>
  <div
    class = "flex flex-col lg:flex-row-reverse flex-nowrap gap-10 mb-10 justify-center"
  >
    <ResponsiveImage 
      defaultImg = "/assets/images/employment-law.webp" 
      phoneImg = "/assets/images/employment-law-320.webp"  
      mediumTabImg = "/assets/images/employment-law-600.webp"  
      tabletImg = "/assets/images/employment-law-1080.webp"
      altText = "Employment Attorney in Los Angeles" 
    /> 
    <div
      class = "justify-center my-auto"
    >
      <h1
          class = "text-4xl md:text-5xl my-auto"
        >Protect Your <span class = "text-primaryC capitalize">Workplace Rights</span></h1>
      <p>At Mordecai Law, I understand the complexities and challenges that arise in the workplace. My mission is to protect your rights and ensure fair treatment in all employment matters. With extensive experience and a commitment to justice, I provide comprehensive legal services tailored to your specific needs.</p>
    </div> 
  </div>
  <h2
      class = "text-4xl md:text-5xl my-5"
  >My <span class = "text-primaryC capitalize">Expertise</span></h2><br />
  <ListComponent 
      ordered = {true}
      list = {expertise}
      wrapperStyle = "mb-10"
  />
  <h3
      class = "text-4xl md:text-5xl my-5"
  >Why Choose <span class = "text-primaryC capitalize">Mordecai Law?</span></h3>
  <ListComponent 
      ordered = {true}
      list = {reasons}
  />
</PracticeAreaLayout>
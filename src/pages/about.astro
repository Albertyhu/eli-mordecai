---
export const prerender = true;
import BaseLayout from "@/layout/BaseLayout.astro"
import NavBar from "@/components/navigation/index.astro"; 
import EliHeadshot from "@/components/eli-headshot.astro";
import SmallSeparatorGold from "@/components/graphics/small-separator-gold.astro";
import PracticeAreaSection from "@/components/about-page/practice-area-section/index.astro"; 
import SpecializedSection from "@/components/about-page/specialized-section.astro";
import CTASection from "@/components/call-to-action/version2.astro"; 
import ImageDivider from "@/components/image-dividers/courthouse-corner.astro"
---
<BaseLayout
   pageTitle = "About Eli Mordecai"
   customDescription = "I'm Eli Mordecai, a general practice attorney in Venice, CA."
>
      <div class="banner-title-area">
         <div class="banner-title-overlay"></div>
         <NavBar />
         <div class="container w-container">
            <div class="banner-title-wrap childrenFadeInFromBottomTag">
               <h1 class="banner-area-title fadeOutIntoBottom ">About Me</h1>
               <img 
                src="/assets/icons/banner-title-separator.svg" 
                loading="lazy" 
                decoding="async"
                alt="Banner Title Separator"
                class="mx-auto fadeOutIntoBottom "
                />
            </div>
         </div>
      </div>
      <div class="about-intro-section">
         <div class="container w-container">
            <div class="about-intro-wrap">
               <div class="w-layout-grid about-intro-grid">
                  <div class="about-intro-image-wrap">
                     <EliHeadshot
                        wrapperStyle = "mx-auto bg-transparent w-[270px] h-[270px] sm:w-[450px] sm:h-[450px]"
                        animationTag = "fadeInFromBottomTag fadeOutIntoBottom"
                        immediateLoading = {true}
                     />
                  </div>
                  <div class="about-intro-content-wrap">
                     <div class="section-title-left childrenFadeInFromBottomTag">
                        <h1 class="section-left-title-text fadeOutIntoBottom text-5xl lg:text-6xl">Iâ€™m Eli Mordecai</h1>
                        <h2 class="section-left-title-text fadeOutIntoBottom !delay-500">A General Practice Attorney in Venice, CA</h2>
                        <SmallSeparatorGold 
                            customStyle = "w-[95px] h-[44px] fadeOutIntoBottom !delay-[1000ms]"
                        />
                        <p class="section-left-content fadeOutIntoBottom !delay-[1500ms]">But I'm more than just someone who knows the law.<br /></p>
                        <p class="section-left-content fadeOutIntoBottom !delay-[2000ms]">I'm a passionate advocate, a creative problem-solver, and a firm believer in achieving the best outcome for every client.<br /></p>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>

      <PracticeAreaSection />
      <SpecializedSection />
      <CTASection 
         title ="Do you think you have a case?",
         leftContent = "I'm ready to offer my expertise to get you the best results. Send me a message and I'll get in touch with you shortly, or you can call me between 9:00 am and 8:00 pm Monday to Saturday."
      />
</BaseLayout>